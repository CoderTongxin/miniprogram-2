/* ==================== 全局样式重置 ==================== */
page {
  background: #F5F5F5;
  font-family: -apple-system-font, "Helvetica Neue", Helvetica, sans-serif;
  color: #863B4E;
  font-size: 28rpx;
  --td-brand-color: #FF5F8E; 
  --td-text-color-primary:#863B4E;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
} 

button {
  background: initial;
  border: none;
  outline: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* ==================== Design System - 设计系统 ==================== */
/* 
设计 Tokens（来自登录页标准）：
颜色：
  bg-top: #FCE6EC
  bg-bottom: #FEECF0
  text-main: #863B4E
  text-strong: #592C35
  text-sub: rgba(134,59,78,0.60)
  text-muted: rgba(134,59,78,0.45)
  text-faint: rgba(134,59,78,0.35)
  primary: #F86585
  pill-yellow: #FFD894

渐变：
  页面背景: linear-gradient(180deg, #FCE6EC 0%, #FEECF0 100%)
  卡片: linear-gradient(180deg, #FFF7FA 0%, #FFFFFF 100%)
  卡片内层条: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%)
  主按钮: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%)
  pill: linear-gradient(180deg, #FFE7B5 0%, #FFD894 100%)
  按钮高光: linear-gradient(180deg, rgba(255,255,255,0.55) 0%, rgba(255,255,255,0) 70%)

阴影（粉色柔投影）：
  卡片: 0 16rpx 40rpx rgba(255,125,165,0.18)
  卡片强调: 0 18rpx 50rpx rgba(255,125,165,0.22)
  按钮: 0 16rpx 28rpx rgba(255,95,142,0.30)
  按钮厚度: 0 10rpx 0 rgba(235,84,114,0.20)

圆角：
  主容器: 48rpx
  卡片: 36rpx
  内层条: 28rpx
  胶囊/pill: 999rpx
*/

/* ==================== 1. 页面与容器 ==================== */
.ds-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FCE6EC 0%, #FEECF0 100%);
  position: relative;
  overflow: hidden;
}

.ds-page--with-decor {
  /* 带光斑装饰的页面 */
}

.ds-page--with-decor::before,
.ds-page--with-decor::after {
  content: '';
  position: fixed;
  border-radius: 50%;
  pointer-events: none;
  z-index: 1;
}

.ds-page--with-decor::before {
  width: 600rpx;
  height: 600rpx;
  top: -200rpx;
  left: -100rpx;
  background: radial-gradient(circle at center, rgba(255,255,255,0.55) 0%, transparent 70%);
  filter: blur(60rpx);
}

.ds-page--with-decor::after {
  width: 500rpx;
  height: 500rpx;
  top: 100rpx;
  right: -150rpx;
  background: radial-gradient(circle at center, rgba(255,180,205,0.25) 0%, transparent 70%);
  filter: blur(60rpx);
}

.ds-safe-top {
  padding-top: env(safe-area-inset-top);
}

.ds-safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.ds-main {
  width: auto;
  padding: 20rpx;
  position: relative;
  z-index: 2;
}

/* ==================== 2. 卡片体系 ==================== */
.ds-card {
  background: linear-gradient(180deg, #FFF7FA 0%, #FFFFFF 100%);
  border-radius: 36rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(255,125,165,0.18);
  margin-bottom: 24rpx;
  position: relative;
}

.ds-card--strong {
  box-shadow: 0 18rpx 50rpx rgba(255,125,165,0.22);
}

.ds-card--no-shadow {
  box-shadow: none;
}

.ds-card__titleRow {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  position: relative;
}

.ds-card__icon {
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #FB7A97 0%, #F97793 100%);
  border-radius: 50%;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(251,122,151,0.4), inset 0 1rpx 2rpx rgba(255,255,255,0.6);
  position: relative;
}

.ds-card__icon::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 3rpx;
  width: 6rpx;
  height: 6rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 50%;
  filter: blur(1rpx);
}

.ds-card__title {
  font-size: 34rpx;
  font-weight: 800;
  color: #863B4E;
  letter-spacing: 0.5rpx;
}

.ds-card__content {
  padding: 22rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.15);
}

.ds-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ds-row--between {
  justify-content: space-between;
}

/* ==================== 3. 按钮体系 ==================== */
.ds-btn-primary {
  height: 96rpx;
  background: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%);
  border-radius: 999rpx;
  box-shadow: 
    0 16rpx 28rpx rgba(255,95,142,0.30),
    0 10rpx 0 rgba(235,84,114,0.20);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: transform 0.15s ease;
  border: none;
  outline: none;
}

.ds-btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(180deg, rgba(255,255,255,0.55) 0%, rgba(255,255,255,0) 70%);
  border-radius: 999rpx 999rpx 0 0;
  pointer-events: none;
}

.ds-btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 14rpx 24rpx rgba(255,95,142,0.25),
    0 8rpx 0 rgba(235,84,114,0.18);
}

.ds-btn-text {
  font-size: 36rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(235,84,114,0.25);
}

.ds-btn-secondary {
  height: 88rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border: 3rpx solid rgba(251,122,151,0.25);
  border-radius: 999rpx;
  box-shadow: 0 12rpx 24rpx rgba(255,125,165,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.15s ease;
}

.ds-btn-secondary .ds-btn-text {
  color: #F86585;
  font-weight: 800;
}

.ds-btn-secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 10rpx 20rpx rgba(255,125,165,0.12);
}

.ds-btn-disabled {
  opacity: 0.5;
  box-shadow: 0 8rpx 16rpx rgba(255,125,165,0.12);
}

/* ==================== 4. 表单体系 ==================== */
.ds-input {
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #863B4E;
  border: 2rpx solid rgba(255,255,255,0.8);
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.15);
}

.ds-input::placeholder {
  color: rgba(134,59,78,0.35);
}

.ds-formItem {
  margin-bottom: 28rpx;
}

.ds-formItem__label {
  font-size: 28rpx;
  font-weight: 700;
  color: #863B4E;
  margin-bottom: 12rpx;
  display: block;
}

.ds-formItem__label--required::after {
  content: '*';
  color: #F86585;
  margin-left: 6rpx;
}

.ds-formItem__tip {
  font-size: 24rpx;
  color: rgba(134,59,78,0.45);
  margin-top: 8rpx;
  line-height: 1.5;
}

.ds-formItem__error {
  font-size: 24rpx;
  color: #F86585;
  margin-top: 8rpx;
}

/* ==================== 5. 列表与条目 ==================== */
.ds-listItem {
  background: linear-gradient(180deg, #FFF7FA 0%, #FFFFFF 100%);
  border-radius: 28rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255,125,165,0.12);
  margin-bottom: 16rpx;
  transition: all 0.15s ease;
}

.ds-listItem:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255,125,165,0.10);
}

.ds-listItem__icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.ds-listItem__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ds-listItem__title {
  font-size: 30rpx;
  font-weight: 700;
  color: #863B4E;
}

.ds-listItem__desc {
  font-size: 24rpx;
  color: rgba(134,59,78,0.60);
}

.ds-listItem__arrow {
  font-size: 48rpx;
  color: rgba(134,59,78,0.35);
  line-height: 1;
  font-weight: 300;
}

.ds-divider {
  height: 2rpx;
  background: rgba(251,122,151,0.15);
  margin: 24rpx 0;
}

/* ==================== 6. 空状态与提示 ==================== */
.ds-empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.ds-empty__icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.ds-empty__text {
  font-size: 28rpx;
  color: rgba(134,59,78,0.45);
  margin-bottom: 32rpx;
}

.ds-tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
}

.ds-tag--yellow {
  background: linear-gradient(180deg, #FFE7B5 0%, #FFD894 100%);
  color: #9A5A1A;
  box-shadow: 0 6rpx 16rpx rgba(255,200,120,0.35);
}

.ds-tag--pink {
  background: linear-gradient(180deg, #FFD5E3 0%, #FFC0D6 100%);
  color: #863B4E;
  box-shadow: 0 6rpx 16rpx rgba(255,125,165,0.25);
}

.ds-tag--success {
  background: linear-gradient(180deg, #D4F4E8 0%, #BFF0DD 100%);
  color: #2E8B57;
  box-shadow: 0 6rpx 16rpx rgba(46,139,87,0.20);
}

.ds-tag--danger {
  background: linear-gradient(180deg, #FFE5E5 0%, #FFD5D5 100%);
  color: #D54941;
  box-shadow: 0 6rpx 16rpx rgba(213,73,65,0.20);
}

/* 申请类型专属标签 */
.ds-tag--funds {
  background: linear-gradient(180deg, #FFD5E3 0%, #FFC0D6 100%);
  color: #C7366B;
  box-shadow: 0 6rpx 16rpx rgba(199,54,107,0.25);
}

.ds-tag--travel {
  background: linear-gradient(180deg, #E5E8FF 0%, #D5DBFF 100%);
  color: #5865F2;
  box-shadow: 0 6rpx 16rpx rgba(88,101,242,0.25);
}

.ds-tag--other {
  background: linear-gradient(180deg, #F5F5F5 0%, #E8E8E8 100%);
  color: #666666;
  box-shadow: 0 6rpx 16rpx rgba(102,102,102,0.15);
}

/* ==================== 7. 文字层级 ==================== */
.ds-text-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #863B4E;
  line-height: 1.3;
}

.ds-text-subtitle {
  font-size: 34rpx;
  font-weight: 800;
  color: #863B4E;
  line-height: 1.4;
}

.ds-text-body {
  font-size: 30rpx;
  color: #863B4E;
  line-height: 1.6;
}

.ds-text-desc {
  font-size: 26rpx;
  color: rgba(134,59,78,0.60);
  line-height: 1.5;
}

.ds-text-tip {
  font-size: 24rpx;
  color: rgba(134,59,78,0.45);
  line-height: 1.5;
}

.ds-text-faint {
  font-size: 22rpx;
  color: rgba(134,59,78,0.35);
}

/* ==================== 8. 浮动操作按钮 ==================== */
.ds-fab {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%);
  box-shadow: 
    0 16rpx 32rpx rgba(255,95,142,0.40),
    0 10rpx 0 rgba(235,84,114,0.20);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: transform 0.15s ease;
}

.ds-fab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.4) 0%, rgba(255,255,255,0) 50%);
  pointer-events: none;
}

.ds-fab:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 14rpx 28rpx rgba(255,95,142,0.35),
    0 8rpx 0 rgba(235,84,114,0.18);
}

