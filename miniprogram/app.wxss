/**app.wxss**/

/* 全局样式重置 */
page {
  background: #F5F5F5;
  font-family: -apple-system-font, "Helvetica Neue", Helvetica, sans-serif;
  color: #333333;
  font-size: 28rpx;
}

/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
} 

/* 按钮重置 */
button {
  background: initial;
  border: none;
  outline: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* TDesign 组件样式覆盖 */
.t-button {
  border-radius: 12rpx !important;
}

.t-tag {
  border-radius: 8rpx !important;
}

.t-input__control {
  font-size: 28rpx !important;
}

.t-textarea__wrapper {
  font-size: 28rpx !important;
}

/* 通用工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.align-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

/* 间距工具类 */
.mt-8 { margin-top: 16rpx; }
.mt-12 { margin-top: 24rpx; }
.mt-16 { margin-top: 32rpx; }
.mt-24 { margin-top: 48rpx; }

.mb-8 { margin-bottom: 16rpx; }
.mb-12 { margin-bottom: 24rpx; }
.mb-16 { margin-bottom: 32rpx; }
.mb-24 { margin-bottom: 48rpx; }

.pt-8 { padding-top: 16rpx; }
.pt-12 { padding-top: 24rpx; }
.pt-16 { padding-top: 32rpx; }
.pt-24 { padding-top: 48rpx; }

.pb-8 { padding-bottom: 16rpx; }
.pb-12 { padding-bottom: 24rpx; }
.pb-16 { padding-bottom: 32rpx; }
.pb-24 { padding-bottom: 48rpx; }

/* 颜色工具类 */
.text-primary { color: #0052D9; }
.text-success { color: #029B6C; }
.text-warning { color: #E37318; }
.text-danger { color: #D54941; }
.text-gray { color: #999999; }

.bg-primary { background-color: #0052D9; }
.bg-success { background-color: #029B6C; }
.bg-warning { background-color: #E37318; }
.bg-danger { background-color: #D54941; }
.bg-white { background-color: #FFFFFF; }
.bg-gray { background-color: #F5F5F5; }