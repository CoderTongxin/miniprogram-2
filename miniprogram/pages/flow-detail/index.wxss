/* pages/flow-detail/index.wxss - 设计系统重构版 */

/* 状态横幅 */
.status-banner {
  padding: 48rpx 40rpx;
  text-align: center;
  color: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.status-banner.success {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  box-shadow: 0 12rpx 32rpx rgba(46,139,87,0.30);
}

.banner-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  font-weight: 300;
}

.banner-text {
  font-size: 36rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.banner-time {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
}

.detail-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 8rpx 24rpx rgba(255,125,165,0.25);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

/* 信息行 */
.info-row {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.type-tag {
  margin-top: 8rpx;
  align-self: flex-start;
}

.info-amount {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.2;
  margin-top: 8rpx;
}

.info-amount.success {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.content-text {
  line-height: 1.7;
  margin-top: 8rpx;
}

.approver-row {
  margin-top: 8rpx;
}

.approver-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.20);
  flex-shrink: 0;
}

/* 驳回原因 */
.reject-reason {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(180deg, #FFE5E5 0%, #FFF0F0 100%);
  border-radius: 28rpx;
  border-left: 8rpx solid #F86585;
  box-shadow: 0 6rpx 16rpx rgba(248,101,133,0.15);
}

.reject-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #F86585;
  margin-bottom: 16rpx;
}

/* 审批流程 */
.timeline {
  padding: 24rpx 0 0;
}

.timeline-item {
  display: flex;
  padding-bottom: 40rpx;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 36rpx;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, rgba(251,122,151,0.25) 0%, rgba(251,122,151,0.08) 100%);
  border-radius: 2rpx;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  box-shadow: 0 4rpx 12rpx rgba(248,101,133,0.35), inset 0 1rpx 2rpx rgba(255,255,255,0.6);
  margin-right: 24rpx;
  margin-top: 6rpx;
  flex-shrink: 0;
  z-index: 1;
  position: relative;
}

.timeline-dot::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 3rpx;
  width: 8rpx;
  height: 8rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 50%;
  filter: blur(1rpx);
}

.timeline-dot.pending {
  background: linear-gradient(135deg, #FFD894 0%, #FFCF7F 100%);
  box-shadow: 0 4rpx 12rpx rgba(255,200,120,0.30);
}

.timeline-dot.completed {
  background: linear-gradient(135deg, #3CB371 0%, #2E8B57 100%);
  box-shadow: 0 4rpx 12rpx rgba(46,139,87,0.30);
}

.timeline-dot.rejected {
  background: linear-gradient(135deg, #F86585 0%, #EB5472 100%);
  box-shadow: 0 4rpx 12rpx rgba(248,101,133,0.35);
}

.timeline-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.timeline-title {
  font-weight: 700;
}

.timeline-title.gray {
  color: rgba(134,59,78,0.45);
}

.timeline-title.success {
  color: #2E8B57;
}

.timeline-title.rejected {
  color: #F86585;
}

.timeline-comment {
  line-height: 1.6;
  margin-top: 8rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 20rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.12);
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 24rpx;
  padding-bottom: calc(env(safe-area-inset-bottom));
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -8rpx 24rpx rgba(255,125,165,0.15);
  z-index: 100;
}

.btn-reject {
  flex: 1;
  height: 88rpx;
}

.btn-approve {
  flex: 2;
  height: 88rpx;
}
