/* pages/settings/index.wxss */
.page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.openid {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: monospace;
}

/* 分区 */
.section {
  margin: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

/* 关系卡片 */
.relation-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
}

/* Tab */
.tabs {
  margin: 24rpx 0;
}

/* 绑定区域 */
.bind-section {
  margin-top: 24rpx;
}

.mt-3 {
  margin-top: 24rpx;
}

/* 绑定码展示 */
.code-display {
  text-align: center;
  padding: 32rpx 0;
}

.code-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.code-value {
  font-size: 72rpx;
  font-weight: 700;
  color: #0052D9;
  letter-spacing: 8rpx;
  margin-bottom: 16rpx;
  font-family: 'Courier New', monospace;
  padding: 24rpx;
  background: #E0EDFF;
  border-radius: 12rpx;
}

.code-tip {
  display: block;
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.code-expire {
  display: block;
  font-size: 24rpx;
  color: #E37318;
  margin-bottom: 24rpx;
}

/* 伴侣信息 */
.partner-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.partner-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.partner-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
