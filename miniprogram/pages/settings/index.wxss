/* pages/settings/index.wxss - 设计系统重构版 */

/* 用户信息卡片 */
.profile-card {
  margin-bottom: 32rpx !important;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 8rpx 24rpx rgba(255,125,165,0.30);
  flex-shrink: 0;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 状态行 */
.status-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

/* Tab */
.tabs {
  margin: 20rpx 0;
}

/* 绑定区域 */
.bind-section {
  margin-top: 24rpx;
}

/* 绑定码展示 */
.code-display {
  text-align: center;
  padding: 32rpx 0;
}

.code-value {
  font-size: 72rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 12rpx;
  margin: 24rpx 0;
  font-family: 'Courier New', monospace;
  padding: 32rpx;
  background-color: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.15);
}

.code-expire {
  display: block;
  font-size: 24rpx;
  color: #F86585;
  margin-top: 16rpx;
  font-weight: 600;
}

/* 伴侣信息 */
.partner-section {
  margin-top: 24rpx;
}

.partner-card {
  margin-top: 12rpx;
}

.partner-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.20);
  flex-shrink: 0;
}

/* 列表项调整 */
.ds-listItem {
  background: transparent;
  box-shadow: none;
  padding: 20rpx 0;
  margin-bottom: 0;
}

.ds-listItem:active {
  transform: none;
  opacity: 0.7;
}
