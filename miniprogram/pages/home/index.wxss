/* pages/home/index.wxss - 设计系统重构版 */

/* 用户信息卡片 */
.user-card {
  margin-bottom: 0rpx !important;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 6rpx 16rpx rgba(255,125,165,0.25);
  flex-shrink: 0;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.stat-badge {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 16rpx 24rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 999rpx;
  box-shadow: 0 6rpx 16rpx rgba(255,125,165,0.15);
}

.stat-label {
  font-size: 22rpx;
  color: rgba(134,59,78,0.60);
  margin-bottom: 6rpx;
}

.stat-amount {
  font-size: 32rpx;
  font-weight: 800;
  color: #F86585;
}

/* Tab 容器 - 粉色主题 */
.tabs-container {
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 2;
}

/* 搜索栏 */
.search-section {
  padding: 0 0 16rpx 0;
  margin-bottom: 8rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 999rpx;
  padding: 14rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.08);
  transition: all 0.3s ease;
}

.search-bar:active {
  background: linear-gradient(180deg, #FFEBF3 0%, #FFF1F6 100%);
  box-shadow: 0 2rpx 8rpx rgba(255,125,165,0.12);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  opacity: 0.6;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #863B4E;
  line-height: 1.4;
}

.search-placeholder {
  color: rgba(134,59,78,0.40);
  font-size: 26rpx;
}

.search-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.search-divider {
  width: 2rpx;
  height: 28rpx;
  background: rgba(134,59,78,0.15);
  border-radius: 1rpx;
}

.search-clear {
  font-size: 24rpx;
  color: rgba(134,59,78,0.50);
  padding: 4rpx 8rpx;
  transition: all 0.2s ease;
}

.search-clear:active {
  color: rgba(134,59,78,0.70);
  transform: scale(0.95);
}

.search-submit {
  font-size: 24rpx;
  color: #F86585;
  font-weight: 600;
  padding: 4rpx 8rpx;
  transition: all 0.2s ease;
}

.search-submit:active {
  color: #FF5F8E;
  transform: scale(0.95);
}

/* 筛选栏 */
.filter-section {
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 24rpx;
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  white-space: nowrap;
  position: relative;
  z-index: 2;
}

.filter-chip {
  padding: 14rpx 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  color: rgba(134,59,78,0.60);
  font-size: 26rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.10);
  transition: all 0.2s ease;
}

.filter-chip.active {
  background: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(255,95,142,0.35);
}

/* 电子流列表 */
.flow-list {
  padding: 16rpx 24rpx 120rpx;
}

/* 加载更多提示 */
.load-more {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.load-more-loading {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  border-radius: 50%;
  animation: loading-bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.3;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.load-more-text {
  font-size: 24rpx;
  color: rgba(134,59,78,0.45);
  margin-left: 8rpx;
}

.load-more-end {
  display: flex;
  align-items: center;
  gap: 16rpx;
  width: 100%;
  padding: 0 40rpx;
}

.end-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(251,122,151,0.20) 50%, transparent 100%);
}

/* 流卡片 */
.flow-card {
  transition: all 0.15s ease;
}

.flow-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 14rpx 36rpx rgba(255,125,165,0.15);
}

.flow-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.flow-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.20);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.flow-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 6rpx;
}

.flow-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #863B4E;
}

.flow-time {
  font-size: 24rpx;
  color: rgba(134,59,78,0.45);
}

.flow-badges {
  flex-shrink: 0;
}

.flow-content {
  font-size: 26rpx;
  color: rgba(134,59,78,0.60);
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.flow-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(251,122,151,0.10);
}

.flow-amount {
  font-size: 40rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.flow-type-tag {
  flex-shrink: 0;
}
