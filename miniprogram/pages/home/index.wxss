/* pages/home/index.wxss */
.page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 120rpx;
}

/* 用户信息区 */
.user-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  color: #FFFFFF;
}

.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-welcome {
  font-size: 28rpx;
  opacity: 0.9;
}

.user-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.85;
  margin-bottom: 8rpx;
}

.stat-amount {
  font-size: 36rpx;
  font-weight: 600;
}

/* Tab 容器 */
.tabs-container {
  background: #FFFFFF;
}

/* 筛选栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-chip {
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  background: #F2F3F5;
  color: #666666;
  font-size: 28rpx;
  flex-shrink: 0;
}

.filter-chip.active {
  background: #0052D9;
  color: #FFFFFF;
}

/* 电子流列表 */
.flow-list {
  padding: 0 24rpx;
}

.empty-state {
  padding: 120rpx 0;
}

.flow-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.flow-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.flow-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.flow-user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.flow-user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.flow-time {
  font-size: 24rpx;
  color: #999999;
}

.flow-badges {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
}

/* 自定义类型标签颜色 */
/* 拨款：深绿色（比审批通过的 #029B6C 更深） */
.type-tag-funds {
  background-color: #00875A !important;
  border-color: #00875A !important;
  color: #FFFFFF !important;
}

/* 出行：浅蓝色 */
.type-tag-travel {
  background-color: #5CADFF !important;
  border-color: #5CADFF !important;
  color: #FFFFFF !important;
}

/* 其他：保持默认灰色 */
.type-tag-other {
  background-color: #DCDCDC !important;
  border-color: #DCDCDC !important;
  color: #333333 !important;
}

.flow-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.flow-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flow-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #D54941;
}

.flow-action {
  padding: 16rpx 32rpx;
  background: #E0EDFF;
  border-radius: 12rpx;
}

.action-text {
  font-size: 28rpx;
  color: #0052D9;
}

.action-text.rejected {
  color: #D54941;
}

/* 浮动按钮 */
.fab-button {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: #0052D9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.4);
  z-index: 100;
}
