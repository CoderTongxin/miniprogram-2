/* pages/editFlow/index.wxss */
.page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 140rpx;
}

.form-container {
  padding: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
  padding: 16rpx 32rpx;
  line-height: 1.5;
}

/* 申请内容输入区 */
.content-input {
  padding: 24rpx 32rpx;
  background: #FFFFFF;
}

.content-input t-textarea {
  width: 100%;
  min-height: 200rpx;
}

/* 申请金额输入区 */
.amount-input {
  padding: 16rpx 32rpx;
  background: #FFFFFF;
}

.amount-input t-input {
  text-align: right;
}

/* 类型选择网格 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
}

.type-item {
  padding: 32rpx 24rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  background: #FFFFFF;
}

.type-item.active {
  border-color: #0052D9;
  background: #F0F5FF;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333333;
}

.type-item.active .type-name {
  color: #0052D9;
  font-weight: 500;
}

/* 审批人区域 */
.approver-section {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F8FBFF;
  border-radius: 12rpx;
}

.approver-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.approver-info {
  display: flex;
  flex-direction: column;
}

.approver-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.approver-role {
  font-size: 24rpx;
  color: #999999;
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.btn-cancel {
  flex: 1;
}

.btn-submit {
  flex: 1;
}
