/* pages/login/index.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 登录区域 */
.login-section {
  margin-bottom: 48rpx;
}

.login-btn {
  border-radius: 16rpx !important;
  font-size: 32rpx !important;
  height: 96rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  background: #FFFFFF !important;
  color: #667eea !important;
  font-weight: 600 !important;
  border: none !important;
}

/* 授权登录按钮内容布局 */
.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

/* 授权登录按钮特殊样式 */
.auth-btn {
  /* 已继承 login-btn 的样式 */
}

/* 进入首页按钮特殊样式 */
.enter-btn {
  /* 已继承 login-btn 的样式 */
}


/* 用户信息区域 */
.user-info-section {
  margin-bottom: 48rpx;
}

.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-tip {
  font-size: 26rpx;
  color: #029B6C;
}

/* 伴侣状态 */
.partner-status {
  margin-bottom: 24rpx;
}

.status-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-card.single {
  border-left: 6rpx solid #E37318;
}

.status-card.paired {
  border-left: 6rpx solid #029B6C;
}

.status-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.bind-btn {
  flex-shrink: 0;
}

/* 功能介绍 */
.features-section {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.features-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  text-align: center;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  gap: 16rpx;
}

.feature-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
}

/* 隐私说明 */
.privacy-section {
  text-align: center;
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
}
