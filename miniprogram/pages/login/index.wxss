/* ==================== 页面容器 ==================== */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FCE6EC 0%, #FEECF0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 40rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  position: relative;
  overflow: hidden;
}

/* ==================== 背景装饰 ==================== */
.bg-decor {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.light-spot {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
}

.light-spot-1 {
  width: 600rpx;
  height: 600rpx;
  top: -200rpx;
  left: -100rpx;
  background: radial-gradient(circle at center, rgba(255,255,255,0.55) 0%, transparent 70%);
}

.light-spot-2 {
  width: 500rpx;
  height: 500rpx;
  top: 100rpx;
  right: -150rpx;
  background: radial-gradient(circle at center, rgba(255,180,205,0.25) 0%, transparent 70%);
}

.light-spot-3 {
  width: 700rpx;
  height: 700rpx;
  bottom: -250rpx;
  left: 50%;
  transform: translateX(-50%);
  background: radial-gradient(circle at center, rgba(255,255,255,0.35) 0%, transparent 70%);
}

.stars {
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 15% 25%, rgba(255,255,255,0.45) 0%, transparent 3rpx),
    radial-gradient(circle at 85% 18%, rgba(255,240,245,0.5) 0%, transparent 2rpx),
    radial-gradient(circle at 45% 12%, rgba(255,255,255,0.4) 0%, transparent 2rpx),
    radial-gradient(circle at 72% 35%, rgba(255,235,242,0.45) 0%, transparent 3rpx),
    radial-gradient(circle at 28% 48%, rgba(255,255,255,0.35) 0%, transparent 2rpx),
    radial-gradient(circle at 88% 65%, rgba(255,245,248,0.4) 0%, transparent 2rpx),
    radial-gradient(circle at 18% 78%, rgba(255,255,255,0.38) 0%, transparent 3rpx),
    radial-gradient(circle at 62% 88%, rgba(255,240,245,0.42) 0%, transparent 2rpx);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

/* ==================== 调试叠加图 ==================== */
.debug-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  opacity: 0.35;
  pointer-events: none;
  z-index: 9999;
}

/* ==================== 主容器卡片 ==================== */
.main-card {
  width: 100%;
  border-radius: 48rpx;
  padding: 44rpx 36rpx 40rpx;
  position: relative;
  z-index: 2;
}

/* ==================== Logo 区 ==================== */
.header {
  text-align: center;
  margin-bottom: 24rpx;
  position: relative;
}

.logo {
  width: 580rpx;
  height: auto;
  display: block;
  margin: 0 auto;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(214,120,150,0.9);
  margin-top: 16rpx;
  letter-spacing: 0.5rpx;
  position: absolute;
  bottom: 30px;
  left: 90px;
}

/* ==================== 卡片通用样式 ==================== */
.card {
  background: linear-gradient(180deg, #FFF7FA 0%, #FFFFFF 100%);
  border-radius: 36rpx;
  padding: 28rpx;
  position: relative;
}

.card-profile {
  box-shadow: 0 16rpx 40rpx rgba(255,125,165,0.18);
  margin-bottom: 26rpx;
}

.card-bind {
  box-shadow: 0 18rpx 50rpx rgba(255,125,165,0.22);
}

.card-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  position: relative;
}

.icon-dot {
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #FB7A97 0%, #F97793 100%);
  border-radius: 50%;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(251,122,151,0.4), inset 0 1rpx 2rpx rgba(255,255,255,0.6);
  position: relative;
}

.icon-dot::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 3rpx;
  width: 6rpx;
  height: 6rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 50%;
  filter: blur(1rpx);
}

.card-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #863B4E;
  letter-spacing: 0.5rpx;
}

.title-decor {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

.title-decor::before {
  content: '♥';
  position: absolute;
  font-size: 22rpx;
  color: rgba(251,122,151,0.25);
  top: -8rpx;
  right: 0;
}

.title-decor::after {
  content: '✦';
  position: absolute;
  font-size: 18rpx;
  color: rgba(251,122,151,0.3);
  bottom: -6rpx;
  right: 16rpx;
}

.title-decor-small::before {
  content: '✦';
  font-size: 20rpx;
  top: -6rpx;
}

.title-decor-small::after {
  content: '♥';
  font-size: 16rpx;
  bottom: -4rpx;
  right: 20rpx;
}

/* ==================== 我的小档案 ==================== */
.profile-content {
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  padding: 22rpx;
  display: flex;
  align-items: center;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.15);
}

/* 未登录状态：编辑模式 */
.profile-edit-content {
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.avatar-edit-section {
  display: flex;
  justify-content: center;
}

.avatar-button {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.avatar-button::after {
  border: none;
}

.avatar-hint {
  font-size: 24rpx;
  color: rgba(134,59,78,0.45);
  text-align: center;
}

.nickname-edit-section {
  width: 100%;
}

.nickname-input {
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #863B4E;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(255,200,220,0.15);
}

.nickname-placeholder {
  color: rgba(134,59,78,0.35);
}

.avatar-placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFE6EE 0%, #FFD5E3 100%);
  border: 2rpx solid rgba(255,255,255,0.9);
  box-shadow: inset 0 2rpx 6rpx rgba(255,200,220,0.3);
  margin-right: 20rpx;
  flex-shrink: 0;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #863B4E;
  line-height: 1.2;
}

.profile-id {
  font-size: 24rpx;
  color: rgba(134,59,78,0.60);
  line-height: 1.2;
}

.profile-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.pill-status {
  background: linear-gradient(180deg, #FFE7B5 0%, #FFD894 100%);
  color: #9A5A1A;
  font-size: 24rpx;
  font-weight: 600;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  box-shadow: 0 6rpx 16rpx rgba(255,200,120,0.35);
  line-height: 1;
}

.arrow-icon {
  font-size: 48rpx;
  color: rgba(134,59,78,0.35);
  line-height: 1;
  font-weight: 300;
}

/* ==================== 伴侣绑定 ==================== */
.pig-illustration {
  position: absolute;
  right: 18rpx;
  top: 40rpx;
  width: 200rpx;
  height: 100rpx;
  z-index: 1;
}

.pig-body {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #FFB8D5 0%, #FFA5C8 100%);
  border-radius: 50% 50% 45% 45%;
  top: 30rpx;
  right: 20rpx;
  box-shadow: inset -4rpx -4rpx 12rpx rgba(255,150,190,0.4), 2rpx 4rpx 12rpx rgba(255,150,190,0.3);
}

.pig-body::before {
  content: '';
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: rgba(134,59,78,0.7);
  border-radius: 50%;
  top: 22rpx;
  left: 20rpx;
}

.pig-body::after {
  content: '';
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: rgba(134,59,78,0.7);
  border-radius: 50%;
  top: 22rpx;
  right: 20rpx;
}

.pig-ear-left {
  position: absolute;
  width: 28rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FFB8D5 0%, #FFA5C8 100%);
  border-radius: 50% 50% 50% 30%;
  top: 20rpx;
  right: 98rpx;
  transform: rotate(-25deg);
}

.pig-ear-right {
  position: absolute;
  width: 28rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FFB8D5 0%, #FFA5C8 100%);
  border-radius: 50% 50% 30% 50%;
  top: 20rpx;
  right: 28rpx;
  transform: rotate(25deg);
}

.pig-heart {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  background: linear-gradient(135deg, #FF8FB0 0%, #FF7BA0 100%);
  border-radius: 50%;
  top: 0rpx;
  right: 35rpx;
  box-shadow: 0 6rpx 20rpx rgba(255,95,142,0.4), inset 0 2rpx 6rpx rgba(255,255,255,0.3);
}

.pig-heart::before {
  content: '♥';
  position: absolute;
  font-size: 40rpx;
  color: rgba(255,255,255,0.5);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-shadow: 0 2rpx 4rpx rgba(255,100,150,0.3);
}

.pig-sparkle {
  position: absolute;
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 10rpx solid rgba(255,220,120,0.6);
}

.pig-sparkle::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 10rpx solid rgba(255,220,120,0.6);
  top: 4rpx;
  left: -6rpx;
}

.pig-sparkle-1 {
  top: 10rpx;
  left: 30rpx;
}

.pig-sparkle-2 {
  bottom: 20rpx;
  left: 10rpx;
  transform: scale(0.8);
}

.bind-content {
  margin-bottom: 22rpx;
  padding-right: 120rpx;
}

.bind-main-text {
  display: block;
  font-size: 34rpx;
  font-weight: 900;
  color: #863B4E;
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.bind-sub-text {
  display: block;
  font-size: 24rpx;
  color: rgba(134,59,78,0.60);
  line-height: 34rpx;
}

/* ==================== 主按钮 ==================== */
.main-button {
  height: 96rpx;
  background: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%);
  border-radius: 999rpx;
  box-shadow: 
    0 16rpx 28rpx rgba(255,95,142,0.30),
    0 10rpx 0 rgba(235,84,114,0.20);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  margin-bottom: 18rpx;
  transition: transform 0.15s ease;
}

.main-button:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 14rpx 24rpx rgba(255,95,142,0.25),
    0 8rpx 0 rgba(235,84,114,0.18);
}

.button-highlight {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(180deg, rgba(255,255,255,0.55) 0%, rgba(255,255,255,0) 70%);
  border-radius: 999rpx 999rpx 0 0;
  pointer-events: none;
}

.button-text {
  font-size: 36rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(235,84,114,0.25);
}

/* ==================== 隐私协议复选框 ==================== */
.privacy-checkbox-section {
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.privacy-checkbox-label {
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(134,59,78,0.60);
  margin-left: 8rpx;
}

.privacy-link {
  display: inline-block;
  font-size: 24rpx;
  color: #F86585;
  font-weight: 700;
  margin: 0 4rpx;
}

/* ==================== 协议区 ==================== */
.agreement {
  text-align: center;
  line-height: 1.6;
  margin-top: 16rpx;
}

.agreement-text {
  font-size: 22rpx;
  color: rgba(134,59,78,0.45);
}

.agreement-link {
  font-size: 22rpx;
  color: #F86585;
  font-weight: 700;
}
