/* pages/statistics/index.wxss - 设计系统重构版 */

/* 头部统计卡片 */
.header-stats {
  text-align: center;
  padding: 40rpx !important;
}

.header-amount {
  font-size: 80rpx;
  font-weight: 900;
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 20rpx 0 32rpx;
  display: block;
  letter-spacing: 2rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.12);
}

.stat-value-wrapper {
  width: 100%;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  color: #F86585;
}

/* 筛选器 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  margin: 16rpx 0 20rpx;
}

.filter-tab {
  flex: 1;
  padding: 18rpx;
  border-radius: 999rpx;
  text-align: center;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  color: rgba(134,59,78,0.60);
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.10);
}

.filter-tab.active {
  background: linear-gradient(180deg, #FF8FB0 0%, #FF5F8E 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(255,95,142,0.35);
}

.period-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  margin-top: 16rpx;
}

.period-item {
  padding: 18rpx;
  border-radius: 20rpx;
  text-align: center;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  color: rgba(134,59,78,0.60);
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255,125,165,0.08);
  transition: all 0.2s ease;
}

.period-item.active {
  background: linear-gradient(180deg, #FFE5EE 0%, #FFF1F6 100%);
  color: #F86585;
  border: 2rpx solid #F86585;
  box-shadow: 0 6rpx 16rpx rgba(255,125,165,0.20);
  transform: translateY(-2rpx);
}

/* 分类统计 */
.type-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 24rpx;
}

.type-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-label {
  min-width: 100rpx;
  flex-shrink: 0;
}

.type-bar-wrapper {
  flex: 1;
}

.type-bar {
  height: 44rpx;
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 999rpx;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.10);
}

.type-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #F86585 0%, #FB7A97 100%);
  border-radius: 999rpx;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(248,101,133,0.30);
}

.type-amount {
  min-width: 140rpx;
  text-align: right;
  flex-shrink: 0;
}

/* 趋势列表 */
.trend-list {
  margin-top: 24rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid rgba(251,122,151,0.10);
}

.trend-item:last-child {
  border-bottom: none;
}

.trend-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.trend-tag {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-weight: 600;
}

.trend-tag.up {
  background: linear-gradient(180deg, #FFE5E5 0%, #FFF0F0 100%);
  color: #F86585;
  box-shadow: 0 4rpx 12rpx rgba(248,101,133,0.15);
}

.trend-tag.down {
  background: linear-gradient(180deg, #D4F4E8 0%, #E8F8F2 100%);
  color: #2E8B57;
  box-shadow: 0 4rpx 12rpx rgba(46,139,87,0.15);
}

/* 统计摘要 */
.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.summary-item {
  background: linear-gradient(180deg, #FFF1F6 0%, #FFF7FA 100%);
  border-radius: 28rpx;
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(255,255,255,0.8), 0 4rpx 12rpx rgba(255,200,220,0.12);
  text-align: center;
}

.summary-icon {
  font-size: 48rpx;
  margin-bottom: 4rpx;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #F86585;
  margin-top: 4rpx;
}

.summary-value.primary {
  background: linear-gradient(135deg, #F86585 0%, #FB7A97 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.summary-value.success {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.summary-value.danger {
  background: linear-gradient(135deg, #F86585 0%, #EB5472 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
