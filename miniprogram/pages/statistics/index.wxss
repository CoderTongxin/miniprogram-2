/* pages/statistics/index.wxss */
.page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 头部统计卡片 */
.header-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  color: #FFFFFF;
}

.header-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: block;
}

.header-amount {
  font-size: 72rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  display: block;
}

.stats-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选卡片 */
.filter-card {
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.filter-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
  display: block;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.filter-tab {
  flex: 1;
  padding: 16rpx;
  border-radius: 12rpx;
  text-align: center;
  background: #F2F3F5;
  color: #666666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #0052D9;
  color: #FFFFFF;
}

.period-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.period-item {
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  background: #F2F3F5;
  color: #666666;
  font-size: 28rpx;
}

.period-item.active {
  background: #E0EDFF;
  color: #0052D9;
  font-weight: 500;
}

/* 图表卡片 */
.chart-card {
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 32rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: #999999;
}

/* 分类统计 */
.type-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.type-row {
  display: flex;
  align-items: center;
}

.type-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.type-bar-wrapper {
  flex: 1;
  margin: 0 24rpx;
}

.type-bar {
  height: 48rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.type-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.type-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  min-width: 160rpx;
  text-align: right;
  flex-shrink: 0;
}

/* 趋势列表 */
.trend-list {
  margin-top: 32rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F2F3F5;
}

.trend-item:last-child {
  border-bottom: none;
}

.trend-period {
  font-size: 28rpx;
  color: #666666;
}

.trend-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.trend-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.trend-change {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.trend-change.up {
  background: #FFE9E9;
  color: #D54941;
}

.trend-change.down {
  background: #E8F8F2;
  color: #029B6C;
}

/* 统计摘要 */
.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 32rpx;
}

.summary-card {
  background: #F8FBFF;
  border-radius: 16rpx;
  padding: 32rpx;
  border-left: 6rpx solid #0052D9;
  display: flex;
  flex-direction: column;
}

.summary-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.summary-value {
  font-size: 48rpx;
  font-weight: 700;
}

.summary-value.primary {
  color: #0052D9;
}

.summary-value.success {
  color: #029B6C;
}

.summary-value.warning {
  color: #E37318;
}

.summary-value.danger {
  color: #D54941;
}

.summary-card:nth-child(2) {
  border-color: #029B6C;
}

.summary-card:nth-child(3) {
  border-color: #E37318;
}

.summary-card:nth-child(4) {
  border-color: #D54941;
}
